<h2>Add Books</h2>

<div class="container">

<b><%= link_to "Back",books_path,class: "btn btn-success"%></b><br/>
<br/>
<%= form_for @book do |f|%>
<% if @book.errors.any? %>
<h4>These errors prohibited the form from being saved: %>
<ul styli="color:red;">
	<% @book.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<lable>Name</lable><br/>
<%= f.text_field :name %><br/>	

<lable>Price</lable><br/>
<%= f.text_field :price %><br/>	

<lable>AuthorName</lable><br/>
<%= f.text_field :author_name %><br/>

<lable>Pages</lable><br/>
<%= f.text_field :pages %><br/>

<lable>Description</lable><br/>
<%= f.text_area :description %><br/>

<lable>ISBN</lable><br/>
<%= f.text_field :isbn %><br/>

<lable>Rating</lable><br/>
<%= f.text_field :rating %><br/>


<lable>Numbers_available</lable><br/>
<%= f.text_field :numbers_available %><br/>

<h3> Add Category </h3>


<%= f.collection_check_boxes :category_ids, Category.all,:id,:name do |b| %>
<%=b.check_box %>
<%=b.label %>
<% end %>


<%=f.submit %>


<% end %>
</div>

